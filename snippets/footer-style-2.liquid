<div class="container">
    <div class="footer-top">
        <div class="container">
            <div class="footer-logo text-center">
                {% include 'footer-logo' %}
            </div>
        </div>
    </div>
    <div class="footer-middle">
        <div class="container">
            <div class="row">
                {% if section.settings.show_instagram and section.settings.newsletter %} {% assign cols = 6 %} {% else %} {% assign cols = 12 %} {% endif %}
                {% if section.settings.show_instagram %}
                <div class="col-md-{{ cols }}">
                    {% include 'instagram-widget' limit:6 %}
                </div>
                {% endif %}
                {% if section.settings.show_instagram and section.settings.newsletter %} <div class="divider visible-xs visible-sm"></div>{% endif %}
                {% if section.settings.newsletter %}
                <div class="col-md-{{ cols }}">
                    {% include 'newsletter-inline' %}
                </div>
                {% endif %}
            </div>
        </div>
    </div>
    <div class="footer-bot">
        <div class="container">
            <div class="row">
                <div class="col-md-6 footer-bot-left">
                    <div class="footer-copyright"> {{ section.settings.copyright }} </div>
                </div>
                <div class="col-md-6 footer-bot-right">
                    {% if section.settings.social_icons %}
                        <div class="footer-social">
                            {% include 'social-media-links' %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>