{% if section.settings.logo_yes %}
    {%- assign logo = section.settings.logo -%}
    {%- assign logo_max_width = section.settings.logo_max_width -%}
    {% include 'demo-footer-logo-image' %}
    <a href="{{ shop.url }}" title="{{ shop.name }}">
        {% if logo != blank %}
            {% capture image_size %}{{ logo_max_width }}x{% endcapture %}
            <img src="{{ logo | img_url: image_size }}" alt='{{ shop.name }}' srcset="{{ logo | img_url: image_size }} 1x, {{ logo | img_url: image_size, scale: 2 }} 2x"/>
        {% else %}
            <img src="{{ 'footer-logo.png' | asset_url }}" alt="{{ shop.name }}"/>
        {% endif %}
    </a>
{% endif %}