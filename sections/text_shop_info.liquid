{% if section.settings.enable %}
  <div class="block block--bg-1  inset-30 {{ section.settings.block_width }}  {{ section.settings.outer_margin }}">
    <div class="container">
      <div class="row">
        <div class="col-xs-6 col-sm-6 col-md-3">
          <div class="shop-feature light-color">
            <div class="shop-feature-icon"><i class="{{ section.settings.caption_1_icon }}"></i></div>
            <div class="shop-feature-text" >{{ section.settings.caption_1_text }}</div>
          </div>
        </div>
       <div class="col-xs-6 col-sm-6 col-md-3">
          <div class="shop-feature light-color">
            <div class="shop-feature-icon"><i class="{{ section.settings.caption_2_icon }}"></i></div>
            <div class="shop-feature-text">{{ section.settings.caption_2_text }}</div>
          </div>
        </div>
       <div class="col-xs-6 col-sm-6 col-md-3">
          <div class="shop-feature light-color">
            <div class="shop-feature-icon"><i class="{{ section.settings.caption_3_icon }}"></i></div>
            <div class="shop-feature-text">{{ section.settings.caption_3_text }}</div>
          </div>
        </div>
       <div class="col-xs-6 col-sm-6 col-md-3">
          <div class="shop-feature light-color">
            <div class="shop-feature-icon"><i class="{{ section.settings.caption_4_icon }}"></i></div>
            <div class="shop-feature-text">{{ section.settings.caption_4_text }}</div>
          </div>
        </div>
      </div>
    </div>
  </div>
{% endif %}

{% schema %}
  {
    "name": "Shop info",
    "class": "index-section",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable",
        "label": "Enable",
        "default": true
      },
      {
        "type": "header",
        "content": "Layout"
      },
      {
        "type":"select",
        "id":"block_width",
        "label":"Width",
        "options":[
          {"value":"boxed","label":"Boxed"},
          {"value":"fullwidth","label":"Fullwidth"},
          {"value":"fullboxed","label":"Fullboxed"},
          {"value":"global_width","label":"Use global site width"}
        ],
        "default":"fullboxed",
        "info":"click Save to see changes"
      },
        {
            "type": "select",
            "id": "outer_margin",
            "label": "Outer top margin",
            "options":[
                {"value":"offset-top-0","label":"None"},
                {"value":"offset-top-30","label":"30px"},
                {"value":"offset-top-40","label":"40px"},
                {"value":"offset-top-50","label":"50px"}
            ],
            "default": "offset-top-50"
        },
      {
      "type": "header",
      "content": "General"
      },
           {
        "type":"header",
        "content":"Caption 1"
      },
      {
        "type": "text",
        "id": "caption_1_text",
        "label": "Caption",
        "default":"payment option"
      },
      {
        "type": "text",
        "id": "caption_1_icon",
        "label": "icon code",
        "default": "icon-creditcard"
      },
      {
        "type":"header",
        "content":"Caption 2"
      },
      {
        "type": "text",
        "id": "caption_2_text",
        "label": "Caption",
        "default":"delivery of goods"
      },
      {
        "type": "text",
        "id": "caption_2_icon",
        "label": "icon code",
        "default": "icon-car"
      },
      {
        "type":"header",
        "content":"Caption 3"
      },
      {
        "type": "text",
        "id": "caption_3_text",
        "label": "Caption",
        "default":"satisfaction guarantee"
      },
      {
        "type": "text",
        "id": "caption_3_icon",
        "label": "icon code",
        "default": "icon-exchange"
      },
      {
        "type":"header",
        "content":"Caption 4"
      },
      {
        "type": "text",
        "id": "caption_4_text",
        "label": "Caption",
        "default":"secure transaction"
      },
      {
        "type": "text",
        "id": "caption_4_icon",
        "label": "icon code",
        "default": "icon-cart"
      }
    ],
    "presets": [
      {
        "name": "Shop Info",
        "category": "Text"
      }
    ]
  }
{% endschema %}