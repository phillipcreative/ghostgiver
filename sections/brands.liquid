    "id": "style",
    "label": "Style",
    "options": [
        {"value":"carousel","label":"Carousel"},
        {"value":"grid","label":"Grid"}
    ],
    "default":"carousel"
}
],
"blocks": [
{
"type": "brand",
"name": "Brand",
"settings": [
{
