{% if section.settings.enable %}
  {%- assign image_size = '499x499' -%}
  <div class="block {{ section.settings.block_width }} {{ section.settings.outer_margin }} offset-side">
    <div class="container">
      <div class="row">
   
        <div class="col-md-12">
          {% if section.settings.limit_2 != blank %}
            {%- assign product_limit_2 = section.settings.limit_2 -%}
          {% endif %}
          {%- assign collection_2 = collections[section.settings.collection_2] -%}
          {% if section.settings.title_2 != blank %}
            <div class="title">
              <h2>{{ section.settings.title_2 }}</h2>
              {% if section.settings.show_view_all_2 == "left" or section.settings.show_view_all_2 == "right" %}
                <span class="show-more text-{{ section.settings.show_view_all_2 }} hidden-xs">
                  <a href="/pages/ways-to-ghostgive" title="{{ collection_2.title }}">{{ 'general.theme.show_all' | t }} +</a>
                </span>
              {% endif %}
              <div class="carousel-arrows"></div>
            </div>
          {% endif %}
          <!-- /Products Grid -->
          <div class="products-grid singel_carsuls products-carousel data-to-show-lg-{{ section.settings.per_row_desctop_2 }} data-to-show-md-2 data-to-show-sm-3 data-to-show-xs-{{ section.settings.per_row_mobile_port_2 }}" data-slick='{"slidesToShow": {{ section.settings.per_row_desctop_2 }}, "slidesToScroll": 1, "responsive": [{"breakpoint": 1200,"settings": {"slidesToShow": 2}}, {"breakpoint": 992,"settings": {"slidesToShow": 2}}, {"breakpoint": 768,"settings": {"slidesToShow": 2}}, {"breakpoint": 480,"settings": {"slidesToShow": {{ section.settings.per_row_mobile_port_2 }}}}] }'>
             {% for block in section.blocks  limit: product_limit_2%}  
        {% if block.type == 'collection' %}
    <div class="product-item {% if block.settings.hide_block_on_mobile %}hide-mobile{% endif %}">
            <div class="product-item-inside">
                <!-- Product Photo -->
                <div class="product-item-photo-holder">
                  <div class="product-item-photo item">
                                    	<a title="NAVY BLUE + PINK FOIL" href="{{ block.settings.url }}">
                                    		{% if block.settings.image_collect %}
                                    		<img class="product-image-photo" src="{{ block.settings.image_collect | img_url: '500x500' }}" alt="">
                                    			       {% endif %}
                                    		</a></div>
                    
                    <!-- /product main photo  -->
                    
                </div>
                <!-- /Product Photo -->
                <!-- Product Details -->
                {% if block.settings.url %}
                <div class="product-item-details">
                    <div class="product-item-name" style="height: 51px;"><a title="NAVY BLUE + PINK FOIL" href="{{ block.settings.url }}" class="product-item-link" tabindex="0"> {{block.settings.linktext}}</a></div>
                </div>
                {% endif %}
                <!-- /Product Details -->
            </div>
        </div>
      {% endif %}
                           {% else %}
              <p class="blockquote">
                To Init
                <b>Product's carousel</b>:<br/>
                1.<b>Choose Collection</b><br/>
                2.<b>Save</b>
              </p>
      {% endfor %}
          </div>
        <!-- /Products Grid -->
        </div>
      </div>
    </div>
  </div>
{% endif %}


