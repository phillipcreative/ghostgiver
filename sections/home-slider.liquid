<div class="custom-slider-section">
  <div class="slick-slider desktop-slider">
    {% for block in section.blocks %}
      <div class="slide">
        <a href="{{ block.settings.button_link }}" class="link">
        <div 
          class="slide-background" 
          style="
            background-image: url();
          "
        >
          <img src="{{ block.settings.desktop_image | img_url: 'master' }}"/>
          <div class="container">
            <div class="slide-content">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }}<br>{{ block.settings.heading2 }}</h2>
              <span>{{ block.settings.heading_subheading }}</span>
            {% endif %}
            {% if block.settings.content != blank %}
              <p>{{ block.settings.content }}<br>{{ block.settings.content2 }}</p>
            {% endif %}
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="slide-button">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
          </div>
        </div>
        </a>
      </div>
    {% endfor %}
  </div>
  <div class="slick-slider mobile-slider" style="display:none">
    {% for block in section.blocks %}
      <div class="slide">
         <a href="{{ block.settings.button_link }}" class="link">
        <div 
          class="slide-background" 
          style="
            background-image: url();
          "
        >
            <img src="{{ block.settings.mobile_image | img_url: 'master' }}"/>
          <div class="container">
             <div class="slide-content">
            {% if block.settings.heading != blank %}
              <h2>{{ block.settings.heading }} {{ block.settings.heading2 }}</h2>
              <span>{{ block.settings.heading_subheading }}</span>
            {% endif %}
            {% if block.settings.content != blank %}
              <p>{{ block.settings.content }} {{ block.settings.content2 }}</p>
            {% endif %}
            {% if block.settings.button_text != blank and block.settings.button_link != blank %}
              <a href="{{ block.settings.button_link }}" class="slide-button">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
          </div>
        </div>
        </a>
      </div>
    {% endfor %}
  </div>
</div>

{% schema %}
{
  "name": "Slider Block",
  "settings": [],
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        {
          "type": "image_picker",
          "id": "desktop_image",
          "label": "Desktop Background Image"
        },
        {
          "type": "image_picker",
          "id": "mobile_image",
          "label": "Mobile Background Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "text",
          "id": "heading2",
          "label": " Second Heading"
        },
        {
          "type": "text",
          "id": "heading_subheading",
          "label": "Subheading"
        },
        {
          "type": "textarea",
          "id": "content",
          "label": "Content"
        },
          {
          "type": "textarea",
          "id": "content2",
          "label": "Second Content"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button Text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Slider Block",
      "category": "Slideshow",
      "blocks": [
        {
          "type": "slide"
        },
        {
          "type": "slide"
        }
      ]
    }
  ]
}
{% endschema %}
